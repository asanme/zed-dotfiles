{
  "base_keymap": "JetBrains",
  "ui_font_size": 17,
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "Andromeda",
    "dark": "One Dark"
  },

  // Font settings
  "ui_font_family": "Inter Nerd Font Propo",
  "buffer_font_features": { "calt": false },
  "buffer_font_family": "Monocraft Nerd Font",
  "font_family": "Monocraft Nerd Font",
  // Other font
  // "buffer_font_family": "CaskaydiaCove Nerd Font",
  // "font_family": "CaskaydiaCove Nerd Font",

  // Vim Settings
  "vim_mode": true,
  "relative_line_numbers": true,

  // Saving settings
  "autosave": "on_focus_change",
  "format_on_save": "off",

  // Others
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "soft_wrap": "editor_width"
}


{
  "base_keymap": "JetBrains",
  "ui_font_size": 17,
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "Summercamp",
    "dark": "One Dark"
  },

  // Font settings
  "buffer_font_family": "CaskaydiaCove Nerd Font",
  "buffer_font_features": { "calt": false },
  "ui_font_family": "Inter Nerd Font Propo",
  "font_family": "CaskaydiaCove Nerd Font",

  // Vim Settings
  "vim_mode": true,
  "relative_line_numbers": true,

  // Saving settings
  "autosave": "on_focus_change",
  "format_on_save": "off"
}
